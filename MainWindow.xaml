<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="帳號" HorizontalAlignment="Left" Margin="182,78,0,0" VerticalAlignment="Top"/>
        <Label Content="密碼" HorizontalAlignment="Left" Margin="182,136,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="238,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Height="25"/>
        <TextBox x:Name="txtAccount" HorizontalAlignment="Left" Margin="238,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Height="25"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="238,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Height="25"/>
        <TextBox x:Name="txtInfo" HorizontalAlignment="Left" Margin="238,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Height="25"/>
        <Button x:Name="txtEnter" Content="登入" HorizontalAlignment="Left" Margin="274,180,0,0" VerticalAlignment="Top" Height="28" Width="54" Click="txtEnter_Click"/>

    </Grid>
</Window>
